{% macro renderFooterHome(config) %}
<footer class="border-t border-border/40 bg-midnight/80 backdrop-blur-xl">
  <div class="mx-auto grid max-w-6xl gap-12 px-4 py-14 md:grid-cols-4 md:px-8">
    <div class="space-y-4">
      <p class="text-lg font-semibold text-fog">{{ config.brand.title }}</p>
      {% for line in config.brand.lines %}
      <p class="text-sm text-secondary">{{ line.content | safe }}</p>
      {% endfor %}
    </div>
    {% for column in config.columns %}
    <div>
      <h3 class="eyebrow text-fog/60">{{ column.title }}</h3>
      <ul class="mt-5 space-y-2 text-sm text-fog/70">
        {% for link in column.links %}
        <li><a href="{{ link.href }}" class="transition hover:text-fog" title="{{ link.label }}">{{ link.label }}</a></li>
        {% endfor %}
      </ul>
    </div>
    {% endfor %}
  </div>
  <div class="border-t border-border/40 px-4 py-6 text-center text-xs text-fog/50 md:px-8">
    {{ config.bottomNote }}
  </div>
</footer>
{% endmacro %}
