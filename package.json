{
  "name": "osrs-dmm-tracker",
  "version": "1.0.0",
  "description": "OSRS Deadman Mode gold price tracker and profit calculator",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "npm run build:pages && node scripts/sync-static-root.mjs && vite --host",
    "build": "npm run build:pages && vite build && npm run tailwind:build && node scripts/sync-static-root.mjs",
    "preview": "vite preview",
    "tailwind:watch": "tailwindcss -c tailwind.config.js -i src/styles/tailwind.css -o public/assets/site.css --watch",
    "tailwind:build": "tailwindcss -c tailwind.config.js -i src/styles/tailwind.css -o public/assets/site.css --minify",
    "lint:html": "html-validate public/index.html",
    "build:pages": "node scripts/build-pages.mjs",
    "verify:deploy": "node scripts/verify-deployment.mjs",
    "deploy:check": "npm run build && npm run verify:deploy",
    "sync:static": "node scripts/sync-static-root.mjs"
  },
  "keywords": [
    "OSRS",
    "DMM",
    "Deadman Mode",
    "gold price",
    "RuneScape"
  ],
  "author": "tangjei414",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "html-validate": "^9.4.0",
    "nunjucks": "^3.2.4",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.2.0"
  }
}